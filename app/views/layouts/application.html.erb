<!DOCTYPE html>
<html>
  <head>
    <title>One Month Rails Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width">
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-toggleable-md bg-inverse">
      <div class="container">
        <div id="logo">
            <%= link_to "One Month Rails", root_path, class: "navbar-brand" %>
          </div>
        <ul class="nav navbar-nav col-sm-push-8">
          <li class="nav-item" ><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", "#", class: "nav-link" %></li>
          <% if user_signed_in? %>
              <li class="nav-item col-sm-push-2"><%= link_to "Log out", signout_path, method: :delete, class: "nav-link" %></li>
            <% else %>
              <li class="nav-item col-sm-push-2"><%= link_to "Sign up", signup_path,class: "nav-link"%></li>
              <li class="nav-item col-sm-push-2"><%= link_to "Sign in", signin_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 One Month</p>
        </center>
      </div>
    </footer>

  </body>
</html>